<div class="container">
  <h1><%= @pet.name %></h1>

  <h2><%= @pet.color %> <%= @pet.species %></h2>
  <p>Found <%= pluralize @pet.found_days_ago.to_i, 'day' %> ago</p>
  <p><strong>Age: </strong> <%= @pet.age %></p>

  <div class="d-flex">
    <%= link_to 'Back to Home', pets_path, class: 'btn btn-outline-info mr-3' %>
    <%= link_to '✏ Edit', edit_pet_path(@pet), class: 'btn btn-outline-warning mr-3' %>
    <%= link_to '♻ Delete',
                 pet_path(@pet),
                 class: 'btn btn-outline-danger mr-3',
                 method: :delete,
                 data: { confirm: 'Are you sure?' }
    %>
  </div>
</div>
